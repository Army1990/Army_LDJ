<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_selector"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:text="UI模板设计（自定义View）"
            android:layout_marginTop="20dp"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/textView_badgeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:text="角标,红点"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_GridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:text="九宫格"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_GitHub_SwipeRefreshLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="仿原生式下拉刷新上拉加载"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_QQ_LoginIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="QQ登陆"
            android:visibility="gone"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_Umeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="有盟"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_PlayPoolSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="播放点击音效"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_ZhenDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击震动"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView_recycleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecycleView的使用"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textView_Baidu_Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView_wemayDemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医生详情Demo"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/textView_viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewPager的动画效果"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView_listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListView Item右滑删除效果"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView_GestureDetector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手势的使用"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView_LockScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一键锁屏"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView_RichScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码扫描"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/textView_BaiDu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="百度地图"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/textView_Push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息推送"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/textView_Pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/textView_ShiPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多媒体"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            />
    </LinearLayout>

</ScrollView>
